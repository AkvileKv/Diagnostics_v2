<%- include("partials/header2"); %>
<%- include("partials/admin-header"); %>

<div class="container">
  <div class="jumbotron text-center">

    <form action="/update" method="post">

      <div class="form-group">
        <i class="fas fa-pen-square fa-6x"></i>
        <h1 class="display-3">Edit record</h1>
        <p class="records-text"><%=nepti.species%></p>

        <p class="database-result"><span class="bold">Id:</span>
          <input type="text" class="form-control  database-result" name="id"  value="<%=nepti._id%>" readonly="readonly">
        </p>
        <div class="form-row">
          <div class="col-lg-4 col-md-6 col-sm-12 character-name">
            <label for="inputState">SPECIES</label>
          </div>
          <div class="col-lg-8 col-md-6 col-sm-12">
            <input type="text" class="form-control form-control-lg" name="species" value="<%=nepti.species%>" readonly="readonly">
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-4 col-md-6 col-sm-12 character-name">
            <label for="inputState">REGION</label>
          </div>
          <div class="col-lg-8 col-md-6 col-sm-12">
            <select name="region" class="select-gray3 form-select form-control-lg">
              <option style="color:gray" value="null">select a region</option>
              <option class="others" <%if (nepti.region === "Central America") { %> selected <% } %> value="Central America">Central America</option>
              <option class="others" <%if (nepti.region === "South America") { %> selected <% } %> value="South America">South America</option>
              <option class="others" <%if (nepti.region === "Continental East Asia") { %> selected <% } %> value="Continental East Asia">Continental East Asia</option>
              <option class="others" <%if (nepti.region === "The Himalaya") { %> selected <% } %> value="The Himalaya">The Himalaya</option>
              <option class="others" <%if (nepti.region === "Central Asia") { %> selected <% } %> value="Central Asia">Central Asia</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-4 col-md-6 col-sm-12 character-name">
            <label for="inputState">SPECIES</label>
          </div>
          <div class="col-lg-8 col-md-6 col-sm-12">
            <input type="text" class="form-control form-control-lg" name="species" value="<%=nepti.species%>" readonly="readonly">
          </div>
        </div>
        <p class="database-result"><span class="bold">Hostplant family:</span>
          <input type="text" class="form-control database-result" name="hostplantfamily" value="<%=nepti.hostplantfamily%>">
        </p>
        <p class="database-result"><span class="bold">Forewing:</span>
          <input type="text" class="form-control database-result" name="forewing" value="<%=nepti.forewing%>">
        </p>
        <p class="database-result"><span class="bold">Tegumen:</span>
          <input type="text" class="form-control database-result" name="tegumen" value="<%=nepti.tegumen%>" readonly="readonly" >
        </p>
        <div class="form-row">
          <div class="col-lg-4 col-md-6 col-sm-12 character-name">
            <label for="inputState">TEGUMEN</label>
          </div>
          <div class="col-lg-8 col-md-6 col-sm-12">
            <select name="ntegumen" class="select-gray3 form-select form-control" multiple>
              <option class="others" <%if (nepti.tegumen === "Band-shaped, pseuduncus absent") { %> selected <% } %> value="Band-shaped, pseuduncus absent">Band-shaped, pseuduncus absent</option>
              <option class="others" <%if (nepti.tegumen === "Extended into a one-lobed pseuduncus") { %> selected <% } %> value="Extended into a one-lobed pseuduncus">Extended into a one-lobed pseuduncus</option>
              <option class="others" <%if (nepti.tegumen === "Extended into a bifid or trifid pseuduncus") { %> selected <% } %> value="Extended into a bifid or trifid pseuduncus">Extended into a bifid or trifid pseuduncus</option>
            </select>
          </div>
        </div>
        <p class="database-result"><span class="bold">Uncus:</span>
          <input type="text" class="form-control database-result" name="uncus" value="<%=nepti.uncus%>">
        </p>
        <p class="database-result"><span class="bold">Gnathos:</span>
          <input type="text" class="form-control database-result" name="gnathos" value="<%=nepti.gnathos%>">
        </p>
        <p class="database-result"><span class="bold">Valva:</span>
          <input type="text" class="form-control   database-result" name="valva" value="<%=nepti.valva%>">
        </p>
        <p class="database-result"><span class="bold">Juxta: </span>
          <input type="text" class="form-control database-result" name="juxta" value="<%=nepti.juxta%>">
        </p>
        <p class="database-result"><span class="bold">Transtilla:</span>
          <input type="text" class="form-control database-result" name="transtilla" value="<%=nepti.transtilla%>">
        </p>
        <p class="database-result"><span class="bold">Vinculum:</span>
          <input type="text" class="form-control database-result" name="vinculum" value="<%=nepti.vinculum%>">
        </p>
        <p class="database-result"><span class="bold">Phallus without Carinae:</span>
          <input type="text" class="form-control   database-result" name="phalluswithoutcarinae" value="<%=nepti.phalluswithoutcarinae%>">
        </p>
        <p class="database-result"><span class="bold">Phallus with Carinae:</span>
          <input type="text" class="form-control database-result" name="phalluswithcarinae" value="<%=nepti.phalluswithcarinae%>">
        </p>
        <p class="database-result"><span class="bold">Image URL:</span>
          <input type="text" class="form-control database-result" name="filepath" value="<%=nepti.filepath%>">
        </p>
      </div>

        <!-- <button type="submit" onclick="return confirm('Are you sure you want to update this record?');" class="btn yellow-button w-50">UPDATE</button>
        <a class="btn btn-dark btn-lg" role="button" href="/edit">Cancel</a> -->

        <div class="">
          <div class="btn-group" role="group" aria-label="Basic example" id="group">
              <button type="submit" onclick="return confirm('Are you sure you want to update this record?');" class="btn yellow-button w-50">UPDATE</button>
              <a type="button" class="btn btn-secondary" href="/edit">Cancel</a>
          </div>
        </div>

    </form>

  </div>
</div>


<%- include('partials/footer') %>
